<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.gooagoo.dao.business.sys.bid.ShopBidAdapterMapper">
	<resultMap id="BaseResultMap" type="com.gooagoo.entity.generator.sys.ShopBid">
		<id column="id" property="id" jdbcType="CHAR" />
		<result column="bid_id" property="bidId" jdbcType="CHAR" />
		<result column="ad_code" property="adCode" jdbcType="CHAR" />
		<result column="shop_id" property="shopId" jdbcType="CHAR" />
		<result column="shop_name" property="shopName" jdbcType="CHAR" />
		<result column="bid_amount" property="bidAmount" jdbcType="DOUBLE" />
		<result column="operator" property="operator" jdbcType="CHAR" />
		<result column="is_del" property="isDel" jdbcType="CHAR" />
		<result column="create_time" property="createTime" jdbcType="TIMESTAMP" />
		<result column="c_time_stamp" property="cTimeStamp" jdbcType="TIMESTAMP" />
	</resultMap>

	<select id="countShopBidDetailInfoByShopId" resultType="java.lang.Integer">
		SELECT COUNT(*) FROM (
			SELECT * FROM (
			SELECT * FROM
					gooagoo_sys.shop_bid
					WHERE is_del='N'
					<if test="shopId !=null">
						AND shop_id=#{shopId}
					</if>
					ORDER BY
					bid_amount DESC
			) a
			GROUP BY a.bid_id
		) b
	</select>

	<select id="findShopBidDetailInfoByShopId" resultMap="BaseResultMap">
		SELECT b.* FROM (
		SELECT * FROM
		gooagoo_sys.shop_bid
		WHERE is_del='N'
		<if test="shopId !=null">
			AND shop_id=#{shopId}
		</if>
	 	ORDER BY bid_amount DESC
		) b
		GROUP BY b.bid_id
		<if test="pageIndex !=null and pageSize !=null">
			LIMIT ${pageIndex},${pageSize}
		</if>
	</select>
</mapper>

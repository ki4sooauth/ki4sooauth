<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.gooagoo.dao.generator.user.UserProfileMapper" >
  <resultMap id="BaseResultMap" type="com.gooagoo.entity.generator.user.UserProfile" >
    <id column="user_id" property="userId" jdbcType="CHAR" />
    <result column="real_name" property="realName" jdbcType="CHAR" />
    <result column="sex" property="sex" jdbcType="CHAR" />
    <result column="birthday" property="birthday" jdbcType="TIMESTAMP" />
    <result column="id_type" property="idType" jdbcType="CHAR" />
    <result column="id_no" property="idNo" jdbcType="CHAR" />
    <result column="telephone" property="telephone" jdbcType="CHAR" />
    <result column="post_code" property="postCode" jdbcType="CHAR" />
    <result column="province" property="province" jdbcType="CHAR" />

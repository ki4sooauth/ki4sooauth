	<filter>
		<filter-name>loginFilter</filter-name>
		<filter-class>com.gooagoo.template.filter.LoginFilter</filter-class>
		<init-param>
			<param-name>ignores</param-name>
			<param-value>
			</param-value>
		</init-param>
		<init-param>
			<param-name>onlyLogins</param-name>
			<param-value>
				method=login,
				method=uploadFile
			</param-value>
		</init-param>
	</filter>

	<filter-mapping>
		<filter-name>loginFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	
	<filter>
		<filter-name>UrlRewriteFilter</filter-name>
		<filter-class>org.tuckey.web.filters.urlrewrite.UrlRewriteFilter</filter-class>
		<init-param>
			<param-name>logLevel</param-name>
			<param-value>WARN</param-value>
		</init-param>
	</filter>

	<filter-mapping>
		<filter-name>UrlRewriteFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

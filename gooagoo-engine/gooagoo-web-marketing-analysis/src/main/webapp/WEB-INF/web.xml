<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
	<display-name>Marketing Analysis System</display-name>
	<context-param>
		<param-name>webAppRootKey</param-name>
		<param-value>analysis.root </param-value>
	</context-param>
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>classpath:applicationContext.xml,classpath*:hessian-core-business-client.xml,classpath*:hessian-query-business-client.xml,classpath*:hessian-query-generator-client.xml</param-value>
	</context-param>

	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>
	<servlet>
		<servlet-name>x</servlet-name>
		<servlet-class>com.gooagoo.common.servlet.EncodingDispatcherServlet</servlet-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
		<load-on-startup>2</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>x</servlet-name>
		<url-pattern>*.do</url-pattern>
	</servlet-mapping>
</web-app>
